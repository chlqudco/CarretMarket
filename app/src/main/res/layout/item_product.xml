<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/itemImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/giraffe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="내가 그린 기린 그림"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemImageView"
        app:layout_constraintTop_toTopOf="@id/itemImageView" />

    <TextView
        android:id="@+id/itemNickNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="킹왕장규민"
        app:layout_constraintEnd_toEndOf="@id/itemNameTextView"
        app:layout_constraintStart_toStartOf="@id/itemNameTextView"
        app:layout_constraintTop_toBottomOf="@id/itemNameTextView" />

    <TextView
        android:id="@+id/itemCreatedTimeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="2022/07/14"
        app:layout_constraintEnd_toEndOf="@id/itemNickNameTextView"
        app:layout_constraintStart_toStartOf="@id/itemNickNameTextView"
        app:layout_constraintTop_toBottomOf="@id/itemNickNameTextView" />

    <TextView
        android:id="@+id/itemPriceTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="60,000,000원"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/itemCreatedTimeTextView"
        app:layout_constraintStart_toStartOf="@id/itemCreatedTimeTextView"
        app:layout_constraintTop_toBottomOf="@id/itemCreatedTimeTextView" />

    <View
        android:id="@+id/itemBottomView"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>